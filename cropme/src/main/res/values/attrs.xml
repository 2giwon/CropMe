  <declare-styleable name="SquareCropOverlay">
    <attr name="cropme_result_width" />
    <attr name="cropme_result_height" />
    <attr name="cropme_with_border" />
    <attr name="cropme_background_alpha" />
  </declare-styleable>

  <declare-styleable name="CropImageView">
    <attr name="cropme_result_width" />
    <attr name="cropme_result_height" />
  </declare-styleable>

  <declare-styleable name="CropLayout2">
    <attr name="cropme_percent_width" />
    <attr name="cropme_percent_height" />
    <attr name="cropme_max_scale" />
    <attr name="cropme_overlay_shape" />
    <attr name="cropme_with_border" />
    <attr name="cropme_background_alpha" />
  </declare-styleable>

  <declare-styleable name="CropImageView2">
    <attr name="cropme_percent_width" />
    <attr name="cropme_percent_height" />
  </declare-styleable>

  <declare-styleable name="SquareCropOverlay2">
    <attr name="cropme_percent_width" />
    <attr name="cropme_percent_height" />
    <attr name="cropme_with_border" />
    <attr name="cropme_background_alpha" />
  </declare-styleable>
